          },
          {
            "tab": "API Reference",
            "icon": "code-simple",
            "pages": [
              {
                "group": "API Endpoints",
                "openapi": "openapi-consolidated.json"
              }
            ]
          },
          {
            "tab": "Release Notes",
            "icon": "bullhorn",
            "groups": [
              {
                "group": "SuperOffice 11",
                "pages": ["release-notes/11/core-crm/index"]
              }
            ]
          }
        ]
