{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "linden",
  "name": "SuperOffice",
  "colors": {
    "primary": "#06423E",
    "light": "#136C60",
    "dark": "#F48A6D"
  },
  "appearance": {
    "default": "light"
  },
  "background": {
    "decoration": "gradient",
    "color": {
      "light": "#F2EFEA"
    }
  },
  "fonts": {
    "heading": {
      "family": "SuperOfficeSans Bold",
      "source": "https://mintlify-assets.b-cdn.net/fonts/SuperOfficeSans-Bold.woff2",
      "format": "woff2",
      "weight": 700
    },
    "body": {
      "family": "SuperOffice Sans",
      "source": "https://mintlify-assets.b-cdn.net/fonts/SuperOfficeSans-Regular.woff2",
      "format": "woff2",
      "weight": 400
    }
  },
  "favicon": "/favicon.ico",
  "navigation": {
    "languages": [
      {
        "language": "en",
        "tabs": [
          {
            "tab": "Home",
            "icon": "house",
            "pages": ["index"]
          },
          {
            "tab": "Guides",
            "icon": "book-open",
            "pages": [
              "en/learn/intro",
              {
                "group": "Get started",
                "pages": [
                  "en/learn/getting-started/index",
                  {
                    "group": "The layout elements",
                    "pages": [
                      "en/learn/getting-started/main-screen/index",
                      "en/learn/getting-started/main-screen/navigator",
                      "en/learn/getting-started/main-screen/buttons-in-menu-bar",
